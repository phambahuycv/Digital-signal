@*begin::Modal*@
<div class="modal fade" tabindex="-1" id="kt_modal_1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Thêm người dùng mới</h3>

                <!--begin::Close-->
                <div class="close-modal btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
                <!--end::Close-->
            </div>

            <div class="modal-body">
                <div class="mb-10">
                    <label class="form-label">Mã nhân viên</label>
                    <input type="text" class="form-control form-control-solid" id="id_user" placeholder="Nhập mã nhân viên" />
                </div>
                <div class="mb-10">
                    @*<label class="form-label">Quyền</label>
                    <input type="text" class="form-control form-control-solid" id="id_role" placeholder="Nhập quyền" />*@
                    <label for="cboCategory">Quyền</label>
                    <select class="form-control form-control-sm" id="role-add">
                    </select>
                </div>
                <div class="mb-10">
                    <label class="form-label">Họ tên</label>
                    <input type="text" class="form-control form-control-solid" id="full_name" placeholder="Nhập họ tên" />
                </div>
                <div class="mb-10">
                    <fieldset>
                        <label class="form-label">Giới tính</label>
                        <select class="form-control form-control-solid" id="sex">
                            <option value="false">
                                Nam
                            </option>
                            <option value="true">
                                Nữ
                            </option>
                        </select>
                    </fieldset>
                </div>
                <div class="mb-10">
                    <label class="form-label">Ngày sinh</label>
                    <input class="form-control form-control-solid" type="date" id="date_of_birth" placeholder="Nhập ngày sinh" />
                </div>
                <div class="mb-10">
                    <label class="form-label">Số điện thoại</label>
                    <input class="form-control form-control-solid" type="text" id="phone" placeholder="Nhập số điện thoại" />
                </div>
                <div class="mb-10">
                    <label class="form-label">Địa chỉ</label>
                    <input class="form-control form-control-solid" type="text" id="address" placeholder="Nhập địa chỉ" />
                </div>
                <div class="mb-10">
                    <fieldset>
                        <label class="form-label">Trạng thái</label>
                        <select class="form-control form-control-solid" id="status">
                            <option value="true">
                                Hoạt động
                            </option>
                            <option value="false">
                                Không hoạt động
                            </option>
                        </select>
                    </fieldset>
                </div>
                <div class="mb-10">
                    <label class="form-label">Email</label>
                    <input class="form-control form-control-solid" type="text" id="email" placeholder="Nhập email" />
                </div>
                <div class="mb-10">
                    <label class="form-label">Tài khoản</label>
                    <input class="form-control form-control-solid" type="text" id="user_name" placeholder="Nhập tài khoản" />
                </div>
                <div class="mb-10">
                    <label class="form-label">Mật khẩu</label>
                    <input class="form-control form-control-solid" type="text" id="password" placeholder="Nhập mật khẩu" />
                </div>
                @*<div class="mb-10">
                    <label class="form-label">Ngày tạo</label>
                    <input class="form-control form-control-solid" type="date" id="create_at" />
                </div>*@
                <div class="mb-10">
                    <label class="form-label">Tạo bởi</label>
                    <input class="form-control form-control-solid" type="text" id="create_by" disabled value="@User.Identity.Name" />
                </div>
               @* <div class="mb-10">
                    <label class="form-label">Ngày sửa</label>
                    <input class="form-control form-control-solid" type="date" id="last_modify_at" />
                </div>*@
                <div class="mb-10">
                    <label class="form-label">Mô tả</label>
                    <input class="form-control form-control-solid" type="text" id="description" placeholder="Nhập mô tả" />
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="close-modal btn btn-light" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btn_modal_add_user">Thêm</button>
                </div>
            </div>
        </div>
    </div>
 </div>
@*end::Modal*@


