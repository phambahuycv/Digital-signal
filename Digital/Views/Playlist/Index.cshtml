@*begin::Modal*@
<div class="modal fade" tabindex="-1" id="kt_modal_1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Thêm bài đăng mới</h3>

                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                </div>
                <!--end::Close-->
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Index", "Playlist", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="mb-10">
                        <label class="form-label">STT</label>
                        <input type="text" class="form-control form-control-solid" id="id_pl" placeholder="Nhập stt" />
                    </div>
                    <div class="mb-10">
                        <label class="form-label">Content</label>
                        <select class="form-control form-control-sm" id="id_cl">
                        </select>
                    </div>
                    <div class="mb-10">
                        <label class="form-label">Tên bài đăng</label>
                        <input type="text" class="form-control form-control-solid" id="playlist_name" placeholder="Nhập tên bài đăng" />
                    </div>
                    <div class="mb-10">
                        <label class="form-label">Đường dẫn</label>
                        <input type="file" class="form-control form-control-solid" id="url" name="file"/>
                    </div>
                    <div class="mb-10">
                        <label class="form-label">Nhập thể loại bài đăng</label>
                        <input type="text" class="form-control form-control-solid" id="type" placeholder="Nhập thể loại bài đăng" />
                    </div>
                    <div class="mb-10">
                        <fieldset>
                            <label class="form-label">Trạng thái</label>
                            <select class="form-control form-control-solid" id="status">
                                <option value="true">
                                    Hoạt động
                                </option>
                                <option value="false">
                                    Không hoạt động
                                </option>
                            </select>
                        </fieldset>
                    </div>
                    <div class="mb-10">
                        <label class="form-label">Thời lượng</label>
                        <input type="number" class="form-control form-control-solid" id="duration" placeholder="Nhập thời lượng" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" id="btn_modal_add_playlist">Thêm</button>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
@*end::Modal*@

